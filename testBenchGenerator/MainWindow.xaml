<Window x:Class="testBenchGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testBenchGenerator"
        xmlns:tbg="clr-namespace:testBenchGenerator"
        xmlns:v="clr-namespace:testBenchGenerator.View"
        mc:Ignorable="d"
        Title="FPGA Developer Tools" WindowStartupLocation="CenterScreen" Icon="ide.ico" SizeChanged="Window_SizeChanged">
    <Grid>
        <TabControl Grid.Row="1" x:Name="tab" SelectionChanged="tab_SelectionChanged">
            <TabItem Header="FIR Designer">
                <v:FIRView x:Name="firView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
            
            <TabItem Header="Testbench Generator">
                <v:GeneratorView x:Name="genView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>

            <!--<TabItem Header="Analyzer">
                <v:AnalyzerView x:Name="anView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>-->
        </TabControl>        

    </Grid>
</Window>
